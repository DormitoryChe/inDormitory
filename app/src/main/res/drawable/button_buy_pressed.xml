<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <item>
        <shape >
            <corners
                android:radius="5dp"
                />

            <gradient
                android:type="radial"
                android:gradientRadius="200"
                android:startColor="#C4C4C4"
                android:endColor="#00FFFFFF"
                android:centerX="0.5"
                android:centerY="0"
                >
            </gradient>

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

        </shape>
    </item>

    <item android:right="1dp" android:left="1dp" android:bottom="2dp">
        <shape >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="2dp"
                android:color="#FFC724"
                />

        </shape>
    </item>

    <item
        android:drawable="@drawable/shopping_cart"
        android:width="30dp"
        android:height="30dp"
        android:gravity="right"
        android:right="10dp"
        android:top="2dp"
        />


</layer-list>