<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="noActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat" >
        <item name="colorControlNormal">#878787</item>
        <item name="colorControlActivated">@color/colorMenuActive</item>
    </style>

    <style name="spinner" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/colorMenuActive</item>
        <item name="colorControlNormal">#ffe082</item>
    </style>

    <style name="spinner_white" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/colorMenuActive</item>
        <item name="colorControlNormal">#ffe082</item>
    </style>


    <style name="Button_gray" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#e8e8e8</item>
        <item name="colorButtonNormal">#f5f5f5</item>
        <item name="android:textColor">@color/colorMenuActive</item>
    </style>

    <style name="Button_red" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#f45f5f</item>
        <item name="colorButtonNormal">#f98484</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button_green" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#85bf93</item>
        <item name="colorButtonNormal">#9bdbaa</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button_orange" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#e5b322</item>
        <item name="colorButtonNormal">#FFC724</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>
