<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dish_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/salat"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:text="Dish title"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/dish_logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/count_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dish_title">
        <Button
            android:id="@+id/dish_plus_button"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/dish_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/dish_minus_button"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total price"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/count_manager"/>
    <TextView
        android:id="@+id/one_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One dish price"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/total_price"
        app:layout_constraintStart_toEndOf="@id/count_manager"/>
    <Button
        android:id="@+id/delete_dish"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>