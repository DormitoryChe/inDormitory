<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/food_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMenuActive"
                android:text="Olive"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="26sp"
                android:paddingBottom="2dp"
                />

            <ImageView
                android:id="@+id/menu_logo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/salat"
                app:layout_constraintTop_toBottomOf="@id/food_name"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:paddingBottom="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:text="$ 123"
                android:textColor="#00380e"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/menu_logo"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_buy"
                android:paddingStart="10dp"
                android:text="add"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/colorMenuActive"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/menu_logo"
                app:layout_constraintEnd_toEndOf="parent" />


            <View
                android:id="@+id/hr_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorMenuActive"
                app:layout_constraintTop_toBottomOf="@id/menu_logo" />

            <TextView
                android:id="@+id/ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Ingredients"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hr_line" />

            <LinearLayout
                android:id="@+id/ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ingredients_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/circle"
                    android:text="Горошок (1 коробка)"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/circle"
                    android:text="Майонез (на око)"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/circle"
                    android:text="Ковбаса (200 грам на порцію)"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/circle"
                    android:text="Картопля варена (100 грам на порцію)"
                    android:textColor="#000000" />
            </LinearLayout>

            <View
                android:id="@+id/hr_line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorMenuActive"
                app:layout_constraintTop_toBottomOf="@id/ingredients" />

            <TextView
                android:id="@+id/method_of_cooking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Method of cooking"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hr_line2" />

            <TextView
                android:id="@+id/method_of_cooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Все нарізають кубиками, перемішують і заправляють майонезом. Простота виготовлення і доступність інгредієнтів зробили цей салат надзвичайно популярною стравою в радянські роки. «Олів'є» був неодмінним атрибутом радянського святкового столу на 7 листопада і Новий рік. Інша назва сучасного рецепта цього салату — «Зимовий» — виникло через те, що його інгредієнти легко доступні в зимовий час, на відміну від інгредієнтів «літніх» салатів."
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/method_of_cooking_title" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4" />
    <fragment
        android:id="@+id/navigation_menu_fragment"
        class="com.example.indormitory.NavigationMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>

